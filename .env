
# Environment Configuration for Therapeutic Companion

# Application Settings
FLASK_ENV=development
FLASK_APP=new_backend.py
PRODUCTION=false

# Security Keys (Generate new ones for production!)
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# Database Configuration
# For local development with PostgreSQL
DATABASE_URL=postgresql://therapy_user:your_password@localhost/therapy_companion

# For Render deployment (this will be auto-populated)
# DATABASE_URL will be automatically set by Render

# Email Configuration (for sending reports)
SYSTEM_EMAIL=your-email@gmail.com
SYSTEM_EMAIL_PASSWORD=your-app-specific-password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SYSTEM_NAME=Therapeutic Companion System

# Optional Email Settings
ADMIN_EMAIL=admin@yourcompany.com
REPLY_TO_EMAIL=support@yourcompany.com

# Demo Account Creation (set to true to create demo accounts on init)
CREATE_DEMO_ACCOUNTS=false

# Application URLs (update for production)
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5000

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=uploads

# Session Configuration
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379  # Optional, uses memory if not set

# Logging
LOG_LEVEL=INFO
LOG_FILE=therapy_companion.log

# Feature Flags
ENABLE_SOCIAL_WORKER_ASSESSMENT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_EXPORT_EXCEL=true

# Pagination
ITEMS_PER_PAGE=20

# Token Expiration (in hours)
ACCESS_TOKEN_EXPIRES=24
REFRESH_TOKEN_EXPIRES=720  # 30 days